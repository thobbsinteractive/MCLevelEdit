<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:MCLevelEdit.ViewModels"
             xmlns:views="clr-namespace:MCLevelEdit.Views"
             x:Class="MCLevelEdit.Views.MapEditorView"
             x:DataType="vm:MapEditorViewModel">
  <Grid ColumnDefinitions="100,100,*"
        RowDefinitions="30,*">
    <RadioButton Name="rbShaded"
                 Margin="1"
                 Grid.Column="0"
                 Grid.Row="0"
                 IsChecked="True"
                 GroupName="grpMapRender"
                 Content="Shaded"/>
    <RadioButton Name="rbHeightMap"
                 Margin="1"
                 Grid.Column="1"
                 Grid.Row="0"
                 GroupName="grpMapRender"
                 Content="Height"/>
    <Viewbox Stretch="Uniform" 
             Grid.Column="0"
             Grid.ColumnSpan="3"
             Grid.Row="1"
             HorizontalAlignment="Left"
             VerticalAlignment="Top">
      <Image Name="imgPreview"
             MinHeight="2048"
             MinWidth="2048"
             Source="{Binding Preview}"/>
      </Viewbox>
  </Grid>
</UserControl>
