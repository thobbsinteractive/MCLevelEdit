<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MCLevelEdit.ViewModels"
             xmlns:c="clr-namespace:MCLevelEdit.Converter"
             xmlns:m="clr-namespace:MCLevelEdit.DataModel"
             xmlns:local="clr-namespace:MCLevelEdit.ViewModels.EntitiesViewModel;assembly=MCLevelEdit"  
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MCLevelEdit.Views.EntitiesView"
             x:DataType="vm:EntitiesViewModel">
  <Grid ColumnDefinitions="*"
        RowDefinitions="*,50">
    <Grid.Resources>
      <c:TypeIdConverter x:Key="typeIdConverter"/>
      <c:KeyValuePairToNameConverter x:Key="keyValuePairToNameConverter"/>
      <c:UInt8ToStringConverter x:Key="uInt8ToStringConverter"/>
      <c:UInt16ToStringConverter x:Key="uInt16ToStringConverter"/>
    </Grid.Resources>
    <DataGrid Grid.Row="0"
              Grid.Column="0"
              Margin="10,10,10,0"
              x:Name="dgEntities"
              ItemsSource="{Binding Entities}"
              IsReadOnly="True"
              GridLinesVisibility="All"
              BorderThickness="1" BorderBrush="Gray">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Num"
                            Width="1*"
                            Binding="{Binding Id}"/>
        <DataGridTemplateColumn Header="Type"
                                Width="2*" >
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <ComboBox x:Name="cboEntityType"
                        SelectedItem="{Binding Type, Converter={StaticResource typeIdConverter}}"
                        SelectedValue="{Binding Type, Converter={StaticResource typeIdConverter}}"
                        DisplayMemberBinding="{Binding .TypeId, Converter={StaticResource entityTypeToNameConverter}}"
                        ItemsSource="{Binding Source={x:Static vm:EntitiesViewModel.TypeIds}}"
                        HorizontalAlignment="Stretch"
                        Margin="0">
              </ComboBox>
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
        <DataGridTemplateColumn Header="Name"
                                Width="2*" >
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <ComboBox x:Name="cboEntityModelType"
                        SelectedItem="{Binding Model}"
                        SelectedValue="{Binding Model}"
                        DisplayMemberBinding="{Binding .Name, Converter={StaticResource keyValuePairToNameConverter}}"
                        ItemsSource="{Binding Model}"
                        HorizontalAlignment="Stretch"
                        Margin="0">
              </ComboBox>
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
        <DataGridTemplateColumn Header="XPos"
            Width="1*">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <TextBox x:Name="txtPosX"
                       Text="{Binding X, Converter={StaticResource positionConverter}}">
              </TextBox>
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
        <DataGridTemplateColumn Header="YPos"
            Width="1*">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <TextBox x:Name="txtPosY"
                       Text="{Binding Y, Converter={StaticResource positionConverter}}">
              </TextBox>
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
        <DataGridTextColumn Header="DisId"
            Width="1*"/>
        <DataGridTextColumn Header="SwSz"
            Width="1*"/>
        <DataGridTextColumn Header="SwId"
            Width="1*"/>
        <DataGridTemplateColumn Header="Parent"
            Width="1*">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <TextBox x:Name="txtParent"
                       Text="{Binding Parent, Converter={StaticResource uInt16ToStringConverter}}">
              </TextBox>
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
        <DataGridTemplateColumn Header="Child"
                            Width="1*">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <TextBox x:Name="txtChild"
                       Text="{Binding Child, Converter={StaticResource uInt16ToStringConverter}}">
              </TextBox>
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
        <DataGridTemplateColumn Width="1*" >
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <Button HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Center"
                      Margin="0"
                      Command="{Binding .DeleteEntityCommand}"
                      CommandParameter="{Binding .}">
                Delete
              </Button>
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
      </DataGrid.Columns>
    </DataGrid>
    <Button Grid.Row="1"
            Grid.Column="0"
            Margin="10,0"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            Command="{Binding AddNewEntityCommand}"
            Name="btnAdd">
      Add Entity
    </Button>
  </Grid>
</UserControl>
